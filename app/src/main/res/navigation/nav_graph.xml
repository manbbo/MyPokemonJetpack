<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreen">

    <composable
        android:id="@+id/homeScreen"
        android:name="com.piton.mypokeapp.list.PokemonHomeScreen"
        android:label="Home Screen" />

    <composable
        android:id="@+id/detailScreen"
        android:name="com.piton.mypokeapp.detail.PokemonDetailScreen"
        android:label="Detail Screen">
        <argument
            android:name="pokemonId"
            app:argType="long" />
    </composable>

    <composable
        android:id="@+id/searchScreen"
        android:name="com.piton.mypokeapp.search.PokemonSearchScreen"
        android:label="Search Screen" />

    <composable
        android:id="@+id/listScreen"
        android:name="com.piton.mypokeapp.list.PokemonListScreen"
        android:label="List Screen"/>

</navigation>
